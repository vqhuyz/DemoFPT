@model IEnumerable<OracleFPT.Models.Employees>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="col-md-10">
        <a href="@Url.Action("Create","Dapper")" class="btn btn-primary">Thêm mới</a>
    </div>
    <div class="col-md-2">
        <form class="form-inline d-flex justify-content-center md-form form-sm mt-0">
            <i class="fas fa-search" aria-hidden="true"></i>
            <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search"
                   aria-label="Search">
        </form>
    </div>
</div>
<table class="table table-borderless">
    <thead>
        <tr>
            <th scope="col">Mã</th>
            <th scope="col">Họ Tên</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col">Phòng ban</th>
            <th scope="col">Ngày tham gia</th>
            <th scope="col">Thao tác</th>            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.NHANVIEN_ID</th>
                <th>@item.NAME</th>
                <th>@item.ADDRESS</th>
                <th>@item.PHONE</th>
                <th>@item.PHONGBAN_ID</th>
                <th>@item.CREATE_DATE</th>
                <th>
                    <a href="@Url.Action("Update", "Dapper", new { id = item.NHANVIEN_ID})" class="btn btn-primary">Sửa</a>
                    <a href="@Url.Action("Delete", "Dapper", new { id = item.NHANVIEN_ID})" class="btn btn-danger">Xóa</a>
                    <a href="@Url.Action("Details", "Dapper", new { id = item.NHANVIEN_ID})" class="btn btn-warning">Chi tiết</a>
                </th>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Back", "Index", "Home")